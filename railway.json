{
  "services": [
    {
      "name": "web",
      "build": {
        "builder": "RAILPACK",
        "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput && python manage.py migrate"
      },
      "deploy": {
        "startCommand": "gunicorn gforceapp.asgi:application -k uvicorn.workers.UvicornWorker --workers 8 --bind 0.0.0.0:$PORT --timeout 180",
        "healthcheckPath": "/health/",
        "healthcheckTimeout": 300
      }
    },
    {
      "name": "scheduler",
      "build": {
        "builder": "RAILPACK",
        "buildCommand": "pip install -r requirements.txt"
      },
      "deploy": {
        "startCommand": "python manage.py start_scheduler",
        "restartPolicyType": "ON_FAILURE"
      }
    }
  ]
}
